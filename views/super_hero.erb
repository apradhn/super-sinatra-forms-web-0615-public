    <div class="form-group">
      <label>Hero's Power</label>
      <input type="text" class="form-control" name="team[members][super2][power]"></div>
    <div class="form-group">
      <label>Hero's Biography</label>
      <input type="text" class="form-control" name="team[members][super2][bio]"></div>
    <h4>Hero 3</h4>
    <div class="form-group">
      <label>Hero's Name</label>
      <input type="text" class="form-control" name="team[members][super3][name]"></div>
    <div class="form-group">
      <label>Hero's Power</label>
      <input type="text" class="form-control" name="team[members][super3][power]"></div>
    <div class="form-group">
      <label>Hero's Biography</label>
      <input type="text" class="form-control" name="team[members][super3][bio]"></div>

    <input type="submit" class="btn btn-default" value="Create Team">    
